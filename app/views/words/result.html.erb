<h1>Lesson result in <%= @category.title %></h1>

<table>
    <thead>
      <tr>
        <th>Question</th>
        <th>Correct Answer</th>
        <th>Your Answer</th>
        <th>Correct?</th>
      </tr>
    </thead>
    <tbody>
      <% @words.each do |word| %>
      <tr>
        <td><%= word.question %></td>
        <td><%= word.answer %></td>
        <td><%= @word_answers.find_by(word_id: word.id).answer %></td>
        <td><%= @word_answers.find_by(word_id: word.id).answer == word.answer %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  