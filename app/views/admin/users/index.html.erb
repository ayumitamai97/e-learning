<h1>Users</h1>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<table>
    <thead>
    <tr>
      <th>Avatar</th>
      <th>Name</th>
      <th>Email</th>
      <th>Created At</th>
      <th>Admin</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.avatar.url if user.avatar.url %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at %></td>
        <td><%= user.admin %></td>
        <td><%= link_to "Detail", user %></td>
        <td><%= link_to "Edit", edit_admin_user_path(user) %></td>
        <td><%= link_to "Lessons", admin_user_lessons_path(user) %></td>
        <td><%= render "users/follow_form", user: user.id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @users %>
